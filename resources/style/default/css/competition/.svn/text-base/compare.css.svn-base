/* 下方媒体敏感性分布图 */
#sentiment_pie_chart {float: left; width: 690px; padding: 10px; display: none; border: #DCDCDC 1px solid;background: #FFFFFF;margin-top: 29px;}

/* 下方媒体敏感性分布图 左部 */
#sentiment_pie_chart div.left {width:690px;font-size: 14px;}
#sentiment_pie_chart_container {width:145px;text-align:center; padding-top: 10px;}
#sentiment_pie_chart div.left h3{font-size: 14px;font-weight: normal;text-align: center;}
#sentiment_pie_chart div.left p{font-size: 12px;padding: 4px 10px;}
.legend {width: 14px; height: 14px; float: left; margin-right: 4px;}

#sentiment_pie_chart_container_two {width:145px;text-align:center; padding-top: 10px;}
#sentiment_pie_chart_container_three {width:145px;text-align:center; padding-top: 10px;}
