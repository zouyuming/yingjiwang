/* SentiUI - 排序按钮 */
.search_result { float: right; width: 708px; margin-top: 30px; }
.search_result .buttons { float: left; width: 668px; margin: 20px; height: 26px; line-height: 26px; }
.search_result .buttons .button { width: 69px; height: 24px; line-height: 24px; background: #FFFFFF; }
.search_result .buttons .selected { width: 71px; height: 26px; line-height: 26px; color: #FFFFFF; background-image: url('../../img/bg_navigate_selected.png'); }

/* EasyUI - 面板切换 */
.tabs-container { width: 710px; }
.tabs-header .tabs .tabs-selected { border: none; border-right: #E7E7E7 1px solid; background: #FFFFFF; }
.tabs-panels { padding: 0; background: #FFFFFF; }
.tabs-panels .panel-empty { margin: 0 0 20px 20px; }
.tabs-panels .panel-loading { margin: 0 0 20px 20px; }

#keyword_name{
    background: url("../../img/bg_search_keyword_all_category.png") no-repeat scroll 0 0 transparent;
    color: black;
    cursor: pointer;
    padding: 0;
    text-align: center;
    width: 103px;
}

.del_root {
    background: url("../../icons/del_key.png") no-repeat scroll 0 center transparent;
    cursor: pointer;
    display: inline-block;
    font-size: 0;
    height: 15px;
    left: 5px;
    opacity: 0.6;
    position: relative;
    top: 3px;
    width: 15px;
}

.search_form .time_type { padding: 0;width: 148px; }
.time_type .combo { width: 112px !important; height: 23px; line-height: 23px; font-size: 15px; border: none; border-radius: 3px; -moz-border-radius: 3px; -webkit-border-radius: 3px; background: #DCDCDC; }
.time_type .combo .combo-text { width: 90px !important; height: 23px; line-height: 23px; padding-left: 2px; font-size: 15px; border: none; background: none; }
.time_type .combo-p .combo-panel { width: 112px !important; height: auto !important; padding: 1px 0; border: none; border-bottom-left-radius: 3px; -moz-border-bottom-left-radius: 3px; -webkit-bottom-left-border-radius: 3px; border-bottom-right-radius: 3px; -moz-border-bottom-right-radius: 3px; -webkit-bottom-right-border-radius: 3px; background: #DCDCDC; }
